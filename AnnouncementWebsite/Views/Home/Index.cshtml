@using System.Linq;

@model IEnumerable<AnnouncementWebsite.Models.AnnouncementsViewModel>

@{
    ViewData["Title"] = "Announcements list";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Creating a new announcement</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.DateAdded.ToString("mm/dd/yyyy")
            </td>
        
            <td>
                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-sm btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
